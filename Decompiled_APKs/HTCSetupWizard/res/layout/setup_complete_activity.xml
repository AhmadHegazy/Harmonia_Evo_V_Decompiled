<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/title" android:text="@string/setup_complete" style="@style/google_title_text" />
    <ImageView android:id="@id/divider" style="@style/google_title_divider" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="0.0px" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:paddingBottom="@dimen/layout_margin_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_left" android:layout_marginTop="@dimen/layout_margin_top" android:layout_marginRight="@dimen/layout_margin_right" android:text="@string/your_device_is_now_ready" style="@style/textAppearance_content" />
            <TextView android:paddingBottom="@dimen/layout_margin_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_left" android:layout_marginRight="@dimen/layout_margin_right" android:text="@string/keypad_tutorial_instruction" style="@style/textAppearance_content" />
            <Button android:id="@id/keypad_tutorial" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_left" android:layout_marginTop="@dimen/layout_margin_top" android:layout_marginRight="@dimen/layout_margin_right" android:layout_marginBottom="@dimen/layout_margin_bottom" android:minWidth="@dimen/button_min_width" android:minHeight="@dimen/button_min_height" android:text="@string/keypad_tutorial_button_message" style="@style/bottom_button" />
            <TextView android:paddingBottom="@dimen/layout_margin_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_margin_left" android:layout_marginRight="@dimen/layout_margin_right" android:text="@string/keypad_tutorial_enjoy_your_thunderbolt" style="@style/textAppearance_content" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/progressbar" />
    <RelativeLayout style="@style/layout_panel">
        <Button android:id="@id/bt_back" android:text="@string/back" android:drawableLeft="@drawable/ic_btn_back" android:layout_alignParentLeft="true" style="@style/bottom_button" />
        <Button android:id="@id/next" android:text="@string/next" android:drawableRight="@drawable/ic_btn_next" android:layout_alignParentRight="true" style="@style/bottom_button" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/title" android:text="@string/data_sync_title" style="@style/google_title_text" />
    <ImageView android:id="@id/divider" style="@style/google_title_divider" />
    <ScrollView android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <LinearLayout android:gravity="left" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="0.0px">
            <TextView android:textColor="@color/white_text_white_focused" android:id="@id/auto_sync_message" android:paddingBottom="15.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="22.0px" android:layout_marginTop="15.0px" android:layout_marginRight="22.0px" android:text="@string/data_sync_message" style="@style/textAppearance_primary" />
            <CheckedTextView android:textColor="@color/white_text_white_focused" android:gravity="center_vertical" android:id="@id/auto_sync_check" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="22.0px" android:layout_marginTop="30.0px" android:layout_marginRight="22.0px" android:checkMark="?android:listChoiceIndicatorMultiple" android:text="@string/data_sync_checkbox" style="@style/textAppearance_primary" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/progressbar" />
    <RelativeLayout android:id="@id/button_panel" style="@style/layout_panel">
        <Button android:id="@id/bt_back" android:text="@string/back" android:drawableLeft="@drawable/ic_btn_back" android:layout_alignParentLeft="true" style="@style/bottom_button" />
        <Button android:id="@id/next" android:text="@string/next" android:drawableRight="@drawable/ic_btn_next" android:layout_alignParentRight="true" style="@style/bottom_button" />
    </RelativeLayout>
</LinearLayout>
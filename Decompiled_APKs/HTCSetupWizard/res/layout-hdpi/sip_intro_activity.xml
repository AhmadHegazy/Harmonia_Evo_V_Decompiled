<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="0.0px" android:layout_weight="1.0">
        <TextView android:id="@id/title" android:text="@string/on_screen_title" style="@style/google_title_text" />
        <ImageView android:id="@id/divider" style="@style/google_title_divider" />
        <RelativeLayout android:id="@id/sip_back_Layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="0.0px" style="@style/layout_generic">
            <ImageView android:id="@id/back_icon" android:paddingLeft="6.0px" android:paddingRight="6.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/oobe_back_icon" />
            <TextView android:textColor="@color/white_text_white_focused" android:id="@id/sip_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sip_hint_1" android:layout_toRightOf="@id/back_icon" style="@style/textAppearance_primary" />
        </RelativeLayout>
        <TextView android:textColor="@color/white_text_white_focused" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="14.0px" android:layout_marginTop="14.0px" android:layout_marginRight="14.0px" android:layout_marginBottom="14.0px" android:text="@string/sip_descrip_txt" style="@style/textAppearance_primary" />
        <EditText android:textColor="@color/white_text_white_focused" android:textColorHint="@color/black_text_white_focused" android:id="@id/et_touch_to_type" android:paddingLeft="22.0px" android:paddingTop="12.0px" android:paddingRight="22.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="14.0px" android:layout_marginTop="14.0px" android:layout_marginRight="14.0px" android:layout_marginBottom="14.0px" android:hint="@string/touch_to_type_hint" style="@style/textAppearance_primary" />
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/auto_correction" android:layout_weight="1.0" />
    </LinearLayout>
    <include layout="@layout/progressbar" />
    <RelativeLayout style="@style/layout_panel">
        <Button android:id="@id/bt_back" android:text="@string/back" android:drawableLeft="@drawable/ic_btn_back" android:layout_alignParentLeft="true" style="@style/bottom_button" />
        <Button android:id="@id/bt_next" android:text="@string/skip" android:drawableRight="@drawable/ic_btn_next" android:layout_alignParentRight="true" style="@style/bottom_button" />
    </RelativeLayout>
</LinearLayout>
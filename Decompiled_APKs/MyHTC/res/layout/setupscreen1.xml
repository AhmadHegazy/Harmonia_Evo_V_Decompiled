<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/screen_title" android:layout_marginTop="@dimen/border_margin" android:layout_marginBottom="@dimen/border_margin" style="@style/google_title_text" />
    <ImageView android:id="@id/screen_title_divider" android:layout_marginBottom="@dimen/border_margin" style="@style/google_title_divider" />
    <ScrollView android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/screen_sub_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/border_margin" android:layout_marginBottom="@dimen/row_spacing" style="@com.htc:style/darklist_primary_m" />
            <TextView android:id="@id/screen_sub_title2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/border_margin" android:layout_marginBottom="@dimen/row_spacing" style="@com.htc:style/darklist_primary_m" />
            <LinearLayout android:orientation="horizontal" android:id="@id/row_2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/row_spacing" style="@style/table_row">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/myhtc_both_icon_dot" style="@style/row_dot" />
                <TextView android:textColor="@color/secondary_text_color_dark_bg" android:id="@id/text_statement2" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@com.htc:style/darklist_primary_m" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@id/row_5" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/row_spacing" style="@style/table_row">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/myhtc_both_icon_dot" style="@style/row_dot" />
                <TextView android:textColor="@color/secondary_text_color_dark_bg" android:id="@id/text_statement5" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@com.htc:style/darklist_primary_m" />
            </LinearLayout>
            <TextView android:id="@id/screen_footer" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/border_margin" android:layout_marginTop="@dimen/border_margin" style="@com.htc:style/darklist_primary_m" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:id="@id/button_panel" style="@style/layout_panel">
        <Button android:id="@id/bt_intro_back" android:text="@string/bt_cs_back" android:layout_weight="1.0" android:layout_alignParentLeft="true" style="@style/bottom_button" />
        <Button android:id="@id/bt_intro_next" android:text="@string/bt_cs_next" android:layout_weight="1.0" android:layout_alignParentRight="true" style="@style/bottom_button" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="translucent_no_title_bar">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="wizard_activity">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="section_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@com.htc:drawable/section_divider</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="list_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:src">@com.htc:drawable/list_divider</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="description_title" parent="@com.htc:style/text_style_primary" />
    <style name="description_text" parent="@com.htc:style/text_style_secondary" />
    <style name="description_box">
        <item name="android:background">#ffffffff</item>
        <item name="android:paddingLeft">@com.htc:dimen/htc_list_item_margin_left</item>
        <item name="android:paddingTop">@com.htc:dimen/htc_list_item_margin_top</item>
        <item name="android:paddingRight">@com.htc:dimen/htc_list_item_margin_right</item>
        <item name="android:paddingBottom">@com.htc:dimen/htc_list_item_margin_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="description_small_box" parent="@style/description_box">
        <item name="android:textAppearance">@style/description_text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">68.0px</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="HtcListBlackStyle">
        <item name="android:background">@color/black</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@*android:drawable/divider_horizontal_dark_opaque</item>
    </style>
    <style name="HtcListStyle">
        <item name="android:background">@color/listview_background</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@color/listview_background</item>
        <item name="android:divider">@com.htc:drawable/common_divider_items</item>
    </style>
    <style name="Theme" />
    <style name="Theme.NoBackgroundNoTitle" parent="@style/Theme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>

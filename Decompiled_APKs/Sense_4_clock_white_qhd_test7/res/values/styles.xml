<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WidgetBackground">
        <item name="android:background">@drawable/clock_add_weather_base</item>
    </style>
    <style name="ClockBackground">
        <item name="android:background">@drawable/weather_clock_tab</item>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomStyle_common_inputfield_light">
        <item name="android:background">?com.htc:attr_common_inputfield_light</item>
    </style>
    <style name="CustomStyle_common_add">
        <item name="android:background">?com.htc:attr_common_add</item>
    </style>
    <style name="CustomStyle_common_inputfield_light_and_input_default_m" parent="@com.htc:style/input_default_m">
        <item name="android:background">?com.htc:attr_common_inputfield_light</item>
    </style>
    <style name="CustomStyle_common_app_bkg_src">
        <item name="android:src">?com.htc:attr_common_app_bkg</item>
    </style>
    <style name="CustomStyle_common_app_bkg">
        <item name="android:background">?com.htc:attr_common_app_bkg</item>
    </style>
    <style name="Theme">
        <item name="android:windowBackground">@drawable/home_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="Theme.Dummy" parent="@style/Theme">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="WorkspaceIcon">
        <item name="android:textSize">@dimen/workspace_icon_text_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/shortcut_selector</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">@dimen/desktop_bubble_padding_top</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/application_shortcut_margin_left</item>
        <item name="android:layout_marginTop">@dimen/application_shortcut_margin_top</item>
        <item name="android:layout_marginRight">@dimen/application_shortcut_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/application_shortcut_margin_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/bubble_text_shadowColor</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:drawablePadding">@dimen/desktop_drawable_padding</item>
    </style>
    <style name="WorkspaceIcon.Portrait" parent="@style/WorkspaceIcon" />
    <style name="WorkspaceIcon.Landscape" parent="@style/WorkspaceIcon" />
    <style name="SearchButton" parent="@*android:style/Widget.Button.Small">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">9.0dip</item>
    </style>
    <style name="Alert" parent="@*android:style/Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.Transparent" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="restrict_WorkspaceIcon">
        <item name="android:textSize">@dimen/restrict_workspace_icon_text_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/shortcut_selector</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">@dimen/restrict_wdesktop_bubble_padding_top</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">@dimen/restrict_wdesktop_bubble_padding_bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/application_shortcut_margin_left</item>
        <item name="android:layout_marginTop">@dimen/application_shortcut_margin_top</item>
        <item name="android:layout_marginRight">@dimen/application_shortcut_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/application_shortcut_margin_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/bubble_text_shadowColor</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:drawablePadding">@dimen/desktop_drawable_padding</item>
    </style>
    <style name="restrict_WorkspaceIcon.Portrait" parent="@style/restrict_WorkspaceIcon" />
    <style name="restrict_WorkspaceIcon.Landscape" parent="@style/restrict_WorkspaceIcon" />
</resources>

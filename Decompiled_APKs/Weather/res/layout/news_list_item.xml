<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="80.0px"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/news_thumb" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@id/news_title" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@id/news_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10.0px" />
            <TextView android:gravity="center" android:id="@id/news_date" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
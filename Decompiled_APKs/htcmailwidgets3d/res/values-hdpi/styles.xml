<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="item_shadow">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">-1.1</item>
        <item name="android:shadowDy">-1.1</item>
        <item name="android:shadowRadius">1.2</item>
    </style>
    <style name="titleBarStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="titleBarStyleShadow">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">2.0px</item>
        <item name="android:layout_marginBottom">2.0px</item>
    </style>
    <style name="no_window_content_overlay">
        <item name="android:windowBackground">?com.htc:attr_common_app_bkg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@drawable/transparent</item>
    </style>
</resources>
